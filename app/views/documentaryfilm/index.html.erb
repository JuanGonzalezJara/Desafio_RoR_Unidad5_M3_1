<h1 class="text-light">Documetales</h1>
<%= button_to 'Agregar Documental', documentaryfilm_new_path, method: :get, class: "btn btn-secondary" %>
<div class="row">
  <% @documentary_films.each do |documental| %>
    <div class="card m-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title text-center"><%= documental.name%></h5>
        <p class="card-text"><strong>Sinopsis:</strong> <%= documental.synopsis %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Director:</strong> <%= documental.director %></li>
      </ul>
    </div>
  <% end %>
</div>
