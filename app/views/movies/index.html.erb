<h1 class="text-light">Peliculas</h1>
<%= button_to 'Agregar Pelicula', movies_new_path, method: :get, class: "btn btn-secondary" %>
<div class="row">
  <% @movies.each do |movie| %>
    <div class="card m-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title text-center"><%= movie.name%></h5>
        <p class="card-text"><strong>Sinopsis:</strong> <%= movie.synopsis %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Director:</strong> <%= movie.director %></li>
      </ul>
    </div>
  <% end %>
</div>
